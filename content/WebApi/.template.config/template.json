{
    "$schema": "http://json.schemastore.org/template",
    "classifications": ["Herald", "WebAPI"],
    "identity": "Herald.Template.WebAPI",
    "name": "Herald Template Web API",
    "shortName": "herald-api",
    "tags": {
        "type": "solution",
        "language": "C#"
    },
    "sourcename": "WebApi",
    "preferNameDirectory": true,
    "placeholderFilename": ".keep",
    "symbols": {
        "framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "replaces": "netcoreapp3.1",
            "defaultValue": "net6.0",
            "choices": [{
                    "choice": "net6.0",
                    "description": ".NET 6.0"
                }, {
                    "choice": "net5.0",
                    "description": ".NET 5.0"
                }, {
                    "choice": "netcoreapp3.1",
                    "description": ".NET Core 3.1"
                }
            ]
        },
        "queue": {
            "type": "parameter",
            "description": "Includes/removes the queue sample into generated project.",
            "datatype": "choice",
            "defaultValue": "sqs",
            "choices": [{
                    "choice": "none",
                    "description": "No queue"
                }, {
                    "choice": "sqs",
                    "description": "Amazon SQS"
                }, {
                    "choice": "kafka",
                    "description": "Apache Kafka"
                }, {
                    "choice": "rabbitmq",
                    "description": "RabbitMQ"
                }, {
                    "choice": "azure",
                    "description": "Azure Queue Storage"
                }
            ]
        },
        "database": {
            "type": "parameter",
            "description": "Includes/removes the queue sample into generated project.",
            "datatype": "choice",
            "defaultValue": "postgre",
            "choices": [{
                    "choice": "none",
                    "description": "No queue"
                }, {
                    "choice": "postgre",
                    "description": "PostgreSQL"
                }, {
                    "choice": "mysql",
                    "description": "MySQL"
                }, {
                    "choice": "sqlserver",
                    "description": "MS SQL Server"
                }
            ]
        },
        "noqueue": {
            "type": "computed",
            "value": "(queue == \"none\")"
        },
        "sqs": {
            "type": "computed",
            "value": "(queue == 'sqs')"
        },
        "kafka": {
            "type": "computed",
            "value": "(queue == \"kafka\")"
        },
        "rabbitmq": {
            "type": "computed",
            "value": "(queue == \"rabbitmq\")"
        },
        "azure": {
            "type": "computed",
            "value": "(queue == \"azure\")"
        },
        "nodatabase": {
            "type": "computed",
            "value": "(database == 'none')"
        },
        "postgre": {
            "type": "computed",
            "value": "(database == 'postgre')"
        },
        "mysql": {
            "type": "computed",
            "value": "(database == 'mysql')"
        },
        "sqlserver": {
            "type": "computed",
            "value": "(database == 'sqlserver')"
        },
        "no-externalapi": {
            "description": "Removes external api sample into generated project.",
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false"
        },
        "noexternalapi": {
            "type": "computed",
            "value": "(no-externalapi)"
        },
		"HostIdentifier": {
			"type": "bind",
			"binding": "HostIdentifier"
		}
    },
    "primaryOutputs": [
		{ "path": "WebApi.sln" },
		{ 
			"condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
			"path": "WebApi.Api.sln" 
		},
    ],
    "sources": [{
            "modifiers": [{
                    "condition": "(HostIdentifier == \"dotnetcli\" ||  HostIdentifier == \"dotnetcli-preview\")",
                    "rename": {
                        "WebApi.Api.sln": "WebApi.sln"
                    }
                }, {
                    "exclude": [
                        "**/.vs/**/*",
                    ],
                    "rename": {
                        "dockerignore": ".dockerignore",
                        "gitignore": ".gitignore"
                    }
                }, {
                    "condition": "(noexternalapi)",
                    "exclude": [
                        "**/GetFromExternalApi/**/*",
                        "**/WebServices/**/*"
                    ]
                }, {
                    "condition": "(noqueue)",
                    "exclude": [
                        "**/SendToQueue/**/*"
                    ]
                }, {
                    "condition": "(nodatabase)",
                    "exclude": [
                        "**/GetFromDataBase/**/*",
                        "**/Migrations/**/*",
                        "**/Persistance/**/*",
                        "**/Repositories/**/*",
                        "**/Entities/*.cs"
                    ]
                }, {
                    "condition": "(framework == \"net6.0\")",
                    "rename": {
                        "Dockerfile60": "Dockerfile"
                    },
                    "exclude": [
                        "**/Dockerfile",
                        "**/Dockerfile31",
                        "**/Dockerfile50"
                    ]
                }, {
                    "condition": "(framework == \"net5.0\")",
                    "rename": {
                        "Dockerfile50": "Dockerfile"
                    },
                    "exclude": [
                        "**/Dockerfile",
                        "**/Dockerfile31",
                        "**/Dockerfile60"
                    ]
                }, {
                    "condition": "(framework == \"netcoreapp3.1\")",
                    "rename": {
                        "Dockerfile31": "Dockerfile"
                    },
                    "exclude": [
                        "**/Dockerfile",
                        "**/Dockerfile50",
                        "**/Dockerfile60"
                    ]
                }
            ]
        }
    ],
    "SpecialCustomOperations": {
        "**/*.yml": {
            "operations": [{
                    "type": "conditional",
                    "configuration": {
                        "if": ["#if"],
                        "else": ["#else"],
                        "elseif": ["#elseif"],
                        "endif": ["#endif"],
                        "actionableIf": ["##if"],
                        "actionableElse": ["##else"],
                        "actionableElseif": ["##elseif"],
                        "actions": ["uncommentYml", "reduceCommentYml"],
                        "trim": true,
                        "wholeLine": true
                    }
                }
            ]
        },
        "**/*.json": {
            "operations": [{
                    "type": "conditional",
                    "configuration": {
                        "if": ["//#if"],
                        "else": ["//#else"],
                        "elseif": ["//#elseif"],
                        "endif": ["//#endif"],
                        "actionableIf": ["//##if"],
                        "actionableElse": ["//##else"],
                        "actionableElseif": ["//##elseif"],
                        "actions": ["cStyleUncomment"],
                        "trim": true,
                        "wholeLine": true
                    }
                }, {
                    "type": "replacement",
                    "configuration": {
                        "id": "cStyleUncomment",
                        "original": "//////",
                        "replacement": ""
                    }
                }
            ]
        }
    },
    "postActions": [{
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [{
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        }
    ]
}
