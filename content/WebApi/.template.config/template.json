{
    "$schema": "http://json.schemastore.org/template",
    "author": "Thiago Fialho",
    "classifications": ["Herald", "WebAPI"],
    "identity": "Herald.Template.WebAPI",
    "name": "Herald Template Web API",
    "shortName": "herald-api",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourcename": "WebApi",
    "preferNameDirectory": true,
    "placeholderFilename": ".keep",
    "symbols": {
        "framework": {
            "type": "parameter",
            "description": "The target framework for the project, eq: net6.0/net5.0/netcoreapp3.1",
            "datatype": "choice",
            "replaces": "netcoreapp3.1",
            "isRequired": true,
            "defaultValue": "netcoreapp3.1",
            "choices": [{
                    "choice": "net6.0",
                    "description": ".NET 6.0"
                }, {
                    "choice": "net5.0",
                    "description": ".NET 5.0"
                }, {
                    "choice": "netcoreapp3.1",
                    "description": ".NET Core 3.1"
                }
            ]
        },
        "no-database": {
            "description": "Put database sample into generated project.",
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false"
        },
        "no-queue": {
            "description": "Put queue sample into generated project.",
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false"
        },
        "no-externalapi": {
            "description": "Put external api sample into generated project.",
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false"
        },
        "nodatabase": {
            "type": "computed",
            "value": "(no-database)"
        },
        "noqueue": {
            "type": "computed",
            "value": "(no-queue)"
        },
        "noexternalapi": {
            "type": "computed",
            "value": "(no-externalapi)"
        }
    },
    "primaryOutputs": [{
            "path": "WebApi.Api.sln"
        }
    ],
    "sources": [{
            "modifiers": [{
                    "rename": {
                        "dockerignore": ".dockerignore",
                        "gitignore": ".gitignore"
                    }
                }, {
                    "condition": "(nodatabase)",
                    "exclude": [
                        "**/GetFromDataBase/**/*",
                        "**/Migrations/**/*",
                        "**/Persistance/**/*",
                        "**/Repositories/**/*",
                        "**/Entities/*.cs"
                    ]
                }, {
                    "condition": "(noqueue)",
                    "exclude": [
                        "**/SendToQueue/**/*"
                    ]
                }, {
                    "condition": "(noexternalapi)",
                    "exclude": [
                        "**/GetFromExternalApi/**/*",
                        "**/WebServices/**/*"
                    ]
                }, {
                    "condition": "(framework == \"net6.0\")",
                    "rename": {
                        "Dockerfile60": "Dockerfile"
                    },
                    "exclude": [
                        "**/Dockerfile",
                        "**/Dockerfile31",
                        "**/Dockerfile50"
                    ]
                }, {
                    "condition": "(framework == \"net5.0\")",
                    "rename": {
                        "Dockerfile50": "Dockerfile"
                    },
                    "exclude": [
                        "**/Dockerfile",
                        "**/Dockerfile31",
                        "**/Dockerfile60"
                    ]
                }, {
                    "condition": "(framework == \"netcoreapp3.1\")",
                    "rename": {
                        "Dockerfile31": "Dockerfile"
                    },
                    "exclude": [
                        "**/Dockerfile",
                        "**/Dockerfile50",
                        "**/Dockerfile60"
                    ]
                }
            ]
        }
    ],
    "SpecialCustomOperations": {
        "**/*.yml": {
            "operations": [{
                    "type": "conditional",
                    "configuration": {
                        "if": ["#if"],
                        "else": ["#else"],
                        "elseif": ["#elseif"],
                        "endif": ["#endif"],
                        "actionableIf": ["##if"],
                        "actionableElse": ["##else"],
                        "actionableElseif": ["##elseif"],
                        "actions": ["uncomment", "reduceComment"],
                        "trim": "true",
                        "wholeLine": "true",
                        "evaluator": "C++"
                    }
                }
            ]
        }
    }
}
